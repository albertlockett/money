{
"compilerOptions": {
  "target": "ES6",
  "module": "commonjs",
  "outDir": "lib",
  "lib": [ "es2015" ],
  "moduleResolution": "node",
  "declaration": false,
  "noImplicitAny": false,
  "removeComments": true,
  "noLib": false
},
"include": [
  "src/**/*"
],
"exclude": [
  "node_modules",
  "**/*.spec.ts"
]}
