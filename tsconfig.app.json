{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "lib",
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "locale": "en"
  },
  "include": [
    "src/app/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
    